{
  "name": "app-gym-manager",
  "packageManager": "yarn@4.10.3",
  "private": true,
  "workspaces": [
    "domain",
    "apps/*"
  ],
  "scripts": {
    "build:database": "node apps/backend/scripts/index.ts",
    "build:domain": "yarn workspace @gym-manager/domain build",
    "build:backend": "yarn run build:domain && yarn workspace @gym-manager/backend build",
    "build:frontend": "yarn run build:domain && yarn workspace @gym-manager/frontend build",
    "start:backend": "yarn workspace @gym-manager/backend start",
    "start:frontend": "yarn workspace @gym-manager/frontend start"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  }
}
